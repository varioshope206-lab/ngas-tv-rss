  <script>
    const rssFeeds = {
      football: "https://feeds.bbci.co.uk/sport/football/rss.xml",
      basketball: "https://www.espn.com/espn/rss/nba/news",
      tennis: "https://feeds.bbci.co.uk/sport/tennis/rss.xml",
      athletisme: "https://feeds.bbci.co.uk/sport/athletics/rss.xml",
      f1: "https://feeds.bbci.co.uk/sport/formula1/rss.xml",
      rugby: "https://feeds.bbci.co.uk/sport/rugby-union/rss.xml",
      cyclisme: "https://feeds.bbci.co.uk/sport/cycling/rss.xml",
      boxe: "https://feeds.bbci.co.uk/sport/boxing/rss.xml",
      golf: "https://feeds.bbci.co.uk/sport/golf/rss.xml",
      olympique: "https://feeds.bbci.co.uk/sport/olympics/rss.xml"
    };

    const translations = {
      fr: {
        loading: "Chargement des actualit√©s...",
        error: "Erreur lors du chargement des actualit√©s.",
        none: "Aucune actualit√© trouv√©e.",
        readMore: "Lire plus ‚ûú"
      },
      en: {
        loading: "Loading news...",
        error: "Error loading news.",
        none: "No news found.",
        readMore: "Read more ‚ûú"
      }
    };

    const container = document.getElementById('newsContainer');
    const buttons = document.querySelectorAll('.cat-btn');
    const langSelect = document.getElementById('langSelect');
    let currentLang = 'fr';
    let activeCat = null;
    let autoRefreshInterval = null;

    langSelect.addEventListener('change', () => {
      currentLang = langSelect.value;
      if (activeCat) fetchRSS(rssFeeds[activeCat]);
    });

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const cat = btn.dataset.cat;
        if (cat === activeCat) return;
        activeCat = cat;
        fetchRSS(rssFeeds[cat]);
        setupAutoRefresh();
      });
    });

    async function fetchRSS(url) {
      const oldSlide = container.querySelector('.news-slide.active');
      const newSlide = document.createElement('div');
      newSlide.className = 'news-slide active';
      newSlide.innerHTML = `<p>${translations[currentLang].loading}</p>`;
      container.appendChild(newSlide);

      if (oldSlide) {
        oldSlide.classList.remove('active');
        oldSlide.classList.add('exit-left');
        setTimeout(() => oldSlide.remove(), 600);
      }

      try {
        const response = await fetch(`https://api.allorigins.win/get?url=${encodeURIComponent(url)}`);
        const data = await response.json();
        const parser = new DOMParser();
        const xml = parser.parseFromString(data.contents, "text/xml");
        const items = xml.querySelectorAll("item");

        newSlide.innerHTML = items.length
          ? Array.from(items).slice(0, 5).map(item => `
              <div class="news-card">
                <h3>${item.querySelector("title").textContent}</h3>
                <p>${item.querySelector("description")?.textContent || ""}</p>
                <a href="${item.querySelector("link").textContent}" target="_blank" style="color:#FFD700;">
                  ${translations[currentLang].readMore}
                </a>
              </div>
            `).join('')
          : `<p>${translations[currentLang].none}</p>`;
      } catch (err) {
        newSlide.innerHTML = `<p>${translations[currentLang].error}</p>`;
      }
    }

    // Rafra√Æchissement automatique toutes les 15 minutes
    function setupAutoRefresh() {
      if (autoRefreshInterval) clearInterval(autoRefreshInterval);
      autoRefreshInterval = setInterval(() => {
        if (activeCat) fetchRSS(rssFeeds[activeCat]);
      }, 900000); // 900000 ms = 15 minutes
    }

    // LIVE modal
    const liveModal = document.getElementById('liveModal');
    const liveBtn = document.getElementById('liveBtn');
    const closeModal = document.getElementById('closeModal');

    liveBtn.addEventListener('click', () => liveModal.classList.add('active'));
    closeModal.addEventListener('click', () => liveModal.classList.remove('active'));
  </script>

</body>
